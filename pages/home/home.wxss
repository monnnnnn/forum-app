@import "../../common/lib/weui.wxss";

.bg {    
    padding: 10rpx;
}
.border {
    margin: 30rpx 100rpx;
    border: 1rpx solid #eee;
    border-radius: 20rpx;
    display: flex;
    justify-content: space-between;
    height: 70rpx;
}
.border icon {
    padding: 16rpx;
}
.search {
    width: 100%;
    padding: 10rpx 0 10rpx 20rpx;
}
.search input{
    width: auto;
}
.section {
    margin: 10rpx 50rpx;
    display: flex;
    justify-content: space-between;
}
.line{
    width:100%;   
    height:2rpx;
    margin-top: 10rpx;   
    background:#eee;   
}
.block {
    margin-top: 30rpx;
}
.user {
    display: flex;
}
.imgHead {
    width: 100rpx;
    height: 100rpx;
    margin: 20rpx;
    border-radius: 50%;
}
.userId {
    margin-top: 22rpx;
}
.time {
    font-size: 12px;
    color: #ddd;
}
.title {
    font-size: 18px;
}
.essay {
    width: 96%;
    margin: 10rpx 2%;
}
.img {
    width: 100%;
    height: 400rpx;
    margin-top: 20rpx;
}
.summary {
    font-size: 14px;
}
.btn {
    width: 92%;
    margin: 0 4%;
    display: flex;
    justify-content: space-between;
}
.btn view {
    font-size: 12px;
    color: #ddd;
}