

@import "../../common/lib/weui.wxss";
@import "./assets/iconfont.wxss";

.picker{
    padding: 13px;
    font-size: 14px;
    background-color: #FFFFFF;
}
.write {
    width: 90%;
    margin: 0 auto;
}
.section {
    margin-left: 30rpx;
    font-size: 18px;
    margin-bottom: 30rpx;
}
.line{
    width:100%;   
    height:2rpx;
    margin-top: 10rpx;   
    background:#eee;   
}
.box {
    margin-bottom: 180rpx;
}
.sectionCollect{
    display: flex;
    justify-content: space-around;
}
.border {
    margin-top: 30rpx;
    border: 1rpx solid #eee;
    border-radius: 20rpx;
}
.title {
    padding: 20rpx 30rpx;
}
.summary {
    margin: 10rpx;
}
.btnSubmit {
    margin: 20rpx;
    background-color: #4d8bb9;
    color: #FFFFFF;
    border: none;
}

.imgBody {
    margin-top: 30rpx;
    width: 180rpx;
    height: 80rpx;
    border: 2rxp solid #eee;
}
.img {
    width: 180rpx;
    height: 80rpx;
    border: 2rxp solid #eee;
}
.addImg {
    width: 122rpx;
    height: 122rpx; 
  }
  .imgArr image {
    display: inline !important;
    width: 100%;
    height: 100%;
  }
  .imgArr view {
    display: inline-block;
    margin: 10rpx;
  }
  .img_item {
    width: 122rpx;
    height: 122rpx; 
    border: 1rpx solid #e5e5e5;
    position: relative;
  }
  .container {
    width: 100%;
  }
  
  .ql-container {
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    font-size: 16px;
    line-height: 1.5;
    overflow: auto;
    padding: 10px 10px 20px 10px;
    border: 1px solid #ECECEC;
    border-radius: 20rpx;
  }
  
  .ql-active {
    color: #22C704;
  }
  
  .iconfont {
    display: inline-block;
    width: 30px;
    height: 30px;
    cursor: pointer;
    font-size: 20px;
  }
  
  .toolbar {
    box-sizing: border-box;
    padding: 0 10px;
    height: 50px;
    width: 100%;
    position: fixed;
    left: 0;
    right: 100%;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border: 1px solid #ECECEC;
    border-left: none;
    border-right: none;
  }